<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewDesignActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Complete Text View"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:onClick="onAutoClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time and Date Picker"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:onClick="onDateTimeClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display List"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:onClick="onListClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display List Multiple"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:onClick="onListMultipleClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spinner Display Item"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:onClick="onSpinnerClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Fragment"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:onClick="onViewDesignClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialog Fragment"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:onClick="onViewDesignClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preference Fragment"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:onClick="onViewDesignClick"/>
    </LinearLayout>
</ScrollView>