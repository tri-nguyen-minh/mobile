<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="50dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="219dp"
            android:layout_height="58dp"
            android:paddingTop="10dp"
            android:text="Please input your Name"
            android:textSize="20sp"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="409dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <Button
            android:id="@+id/btnInputName"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:onClick="onClickBtnInputName"
            android:text="Input Name"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="409dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <Button
            android:id="@+id/btnThemes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Themes to Activity"
            android:onClick="onClickBtnThemes"/>

        <Button
            android:id="@+id/btnDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Dialog Window"
            android:onClick="onClickBtnDialog"/>

        <Button
            android:id="@+id/btnProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Progress Dialog"
            android:onClick="onClickBtnProgress"/>

        <Button
            android:id="@+id/btnComplex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Complex Progress Dialog"
            android:onClick="onClickBtnComplex"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
