<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            style="@style/header"
            android:text="ACTIVITY LIST" />

        <Button
            android:id="@+id/btnAddActivity"
            style="@style/generalBtn"
            android:text="Calculation Activity"
            android:onClick="onClickBtnAddActivity"/>

        <Button
            android:id="@+id/btnStartBrowser"
            style="@style/generalBtn"
            android:text="Start Browser"
            android:onClick="onClickBtnStartBrowser" />

        <Button
            android:id="@+id/btnStartBrowserLaunch"
            style="@style/generalBtn"
            android:text="Start Browser with Launch Action"
            android:onClick="onClickBtnStartBrowserLaunch" />

        <Button
            android:id="@+id/btnStartPhone"
            style="@style/generalBtn"
            android:text="Start Phone"
            android:onClick="onClickBtnStartPhone" />

        <Button
            android:id="@+id/btnException"
            style="@style/generalBtn"
            android:text="Exception Condition"
            android:onClick="onClickBtnException" />

        <Button
            android:id="@+id/btnSMS"
            style="@style/generalBtn"
            android:text="Use Intent to send SMS"
            android:onClick="onClicksendSMS" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>