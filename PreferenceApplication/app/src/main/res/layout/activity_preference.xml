<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreferenceActivity"
    android:gravity="center"
    android:padding="20dp">

    <Button
        android:id="@+id/btnLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Preferences"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:onClick="onBtnLoadClick"/>

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Preference"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:onClick="onBtnDisplayClick"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a String"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify Preference"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:onClick="onBtnModifyClick"/>

</LinearLayout>